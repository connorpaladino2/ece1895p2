#include <DFRobotDFPlayerMini.h>

DFRobotDFPlayerMini mp3;

void setup() {
  Serial.begin(9600);  // Hardware serial
  delay(500);

  if (!mp3.begin(Serial)) {
    while (true); // Freeze here = DFPlayer not working
  }

  delay(200);
  mp3.volume(20);
  mp3.play(1);   // Plays 0001.mp3

  // Add visual indicator (e.g. onboard LED)
  pinMode(LED_BUILTIN, OUTPUT);
  digitalWrite(LED_BUILTIN, HIGH); // LED on = success
}

void loop() {}
